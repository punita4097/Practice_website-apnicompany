
@{
    ViewData["Title"] = "Contact";
}
<style>
    .card-text {
        font-size: 14px;
        font-family: Cambria;
    }

    .card-title {
        font-family: Cambria;
        font-size-adjust: 1;
        font-stretch: expanded;
        font-size: 24px;
    }

    .card:hover {
        -webkit-box-shadow: -2px 9px 40px -12px rgba(0,0,0,0.75);
        -moz-box-shadow: -2px 9px 40px -12px rgba(0,0,0,0.75);
        box-shadow: -2px 9px 40px -12px rgba(0, 0, 0, 0.75);
        color: darkblue;
        background-color: cornsilk;
    }
    h5{
        color:forestgreen;
        font-weight:800;
        font-family:Cambria;
        padding:10px;
        text-align:center;
    }
    h6{
        font-family:Cambria;
        text-align:center;
    }
    
    .row {
        margin-top: 40px;
        margin-left: 30px;
        margin-right: 30px;
    }
    .card{
        height:100px;
    }
</style>

<h2 style="color:brown;font-weight:900;margin-left:100px;">Contact Us</h2>

<h4 style="color:forestgreen">Reach us by Email or whatsapp</h4>

<div class="container" style="margin:100px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Bootstrap Card -->
            <div class="card" style="width:20rem">
                <div>
                    <h5>Write to us</h5>
                    <h6>support@apnycompany.com</h6>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card" style="width:20rem;">
                <img src="~/Images/whatsapp.png" alt="Card Two" class="card-img-top" style="margin-top:5px;width:20%;height:40px;align-self:center">
                <div>
                   <h5>Whatsapp:9876543210</h5>
                </div>
            </div>
        </div>
    </div>
</div>

